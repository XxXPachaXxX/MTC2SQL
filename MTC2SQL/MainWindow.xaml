                                    <CheckBox Grid.Column="2" Height="40" Content="Use SSL" IsChecked="{Binding SelectedDataServerUseSSL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="-10,10,0,0"/>

